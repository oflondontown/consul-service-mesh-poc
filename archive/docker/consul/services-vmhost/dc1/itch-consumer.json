{
  "service": {
    "name": "itch-consumer",
    "id": "itch-consumer-dc1",
    "address": "__HOST_IP__",
    "port": 9100,
    "meta": {
      "datacenter": "dc1",
      "instanceRole": "primary"
    },
    "check": {
      "id": "itch-consumer-health",
      "http": "http://__HOST_IP__:9100/health",
      "interval": "5s",
      "timeout": "1s",
      "failures_before_critical": 3,
      "success_before_passing": 3
    },
    "connect": {
      "sidecar_service": {
        "port": 21004,
        "proxy": {
          "upstreams": [
            {
              "destination_name": "itch-feed",
              "local_bind_address": "0.0.0.0",
              "local_bind_port": 19100
            }
          ]
        }
      }
    }
  }
}
