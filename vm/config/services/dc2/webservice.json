{
  "service": {
    "name": "webservice",
    "id": "webservice-dc2",
    "port": 8080,
    "meta": {
      "datacenter": "dc2",
      "instanceRole": "secondary"
    },
    "check": {
      "id": "webservice-health",
      "http": "http://127.0.0.1:8080/actuator/health",
      "interval": "5s",
      "timeout": "1s",
      "failures_before_critical": 3,
      "success_before_passing": 3
    },
    "connect": {
      "sidecar_service": {
        "proxy": {
          "upstreams": [
            { "destination_name": "refdata", "local_bind_port": 18082 },
            { "destination_name": "ordermanager", "local_bind_port": 18083 }
          ]
        }
      }
    }
  }
}
